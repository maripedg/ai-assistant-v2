# Frontend .env example

# Backend base URL (FastAPI or Flask backend)
BACKEND_API_BASE=http://localhost:8080

# Streamlit server port
FRONTEND_PORT=8501

# Local storage directories (relative to frontend/streamlit/)
AUTH_STORAGE_DIR=./data/credentials
FEEDBACK_STORAGE_DIR=./data/feedback

# UI
ASSISTANT_TITLE=AI Assistant
LOG_LEVEL=INFO

# Backend request timeout (seconds)
REQUEST_TIMEOUT=60

# Authentication cookies (optional but recommended)
# Set this to enable "Remember me" cookie tokens
SESSION_SECRET=change-me-in-dev
SESSION_TTL_MIN=120
SESSION_COOKIE_NAME=assistant_session

